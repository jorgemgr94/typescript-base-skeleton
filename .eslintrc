{
	"root": true,
	"env": {
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"prettier",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking"
	],
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"rules": {
		"no-console": [
			"error",
			{
				"allow": ["warn", "error"]
			}
		]
	}
}
